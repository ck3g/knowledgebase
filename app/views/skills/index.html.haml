= render 'menu', action: "index"

.tab-content
  .tab-pane.active
    #skills
      - @skills.each do |skill|
        .row.skill-row.clearfix
          .span1
            .skill-card
              .skill-card-inner
                .skill
                  %h4= skill.questions.count
          .span8
            .skill-info.clearfix
              - if can? :manage, skill
                .manage-button-wrapper
                  = link_to t(:delete_skill), skill, method: :delete, confirm: t(:are_you_sure), class: "manage-button"
                .manage-button-wrapper
                  = link_to t(:edit_skill), edit_skill_path(skill), class: "manage-button"
              %h5
                = link_to skill.name, skill, class: "skill-link"
              %ol.unstyled.horizontal
                - if skill.new?
                  %li
                    %span.new= t(:new_skill)
                %li= l skill.created_at, format: :long
                %li.questions= link_to t(:questions), skill_path(skill, anchor: "#questions"), class: "questions-link"

              %p.description
                = simple_format skill.description
              .tags.clearfix
                = succeed ":" do
                  = t(:tags)
                = links_to_tags(skill.tags)

        %hr
