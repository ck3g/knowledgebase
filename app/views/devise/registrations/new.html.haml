= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin" }) do |f|
  %h2 Sign up
  = f.error_notification
  .form-inputs
    = f.input :username, required: true, autofocus: true, label: false, placeholder: User.human_attribute_name(:username)
    = f.input :email, required: true, label: false, placeholder: User.human_attribute_name(:email)
    = f.input :password, required: true, label: false, placeholder: User.human_attribute_name(:password)
    = f.input :password_confirmation, required: true, label: false, placeholder: User.human_attribute_name(:password_confirmation)
    = f.button :submit, "Sign up", class: "btn btn-primary"
  %div
    = render "devise/shared/links"
