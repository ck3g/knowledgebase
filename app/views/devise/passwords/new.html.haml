= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f|
  %h2 Forgot your password?
  = f.error_notification
  .form-inputs
    = f.input :email, required: true, autofocus: true, label: false, placeholder: User.human_attribute_name(:email)
    = f.button :submit, "Send me reset password instructions", class: "btn btn-primary"
  %div
    = render "devise/shared/links"
